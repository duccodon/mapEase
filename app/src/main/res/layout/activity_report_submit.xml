<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:background="#FFFFFF"
android:padding="16dp"
tools:context=".ReportSubmit"
android:layout_marginBottom="370dp"
xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/reportSubmitBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/white"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/cancel_btn"/>

</LinearLayout>
<!-- Biểu tượng ghép hình -->
<ImageView
    android:id="@+id/puzzle_icon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@android:drawable/ic_menu_help"/>

<!-- Tiêu đề "Off topic" -->
<TextView
    android:id="@+id/title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Off topic"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginTop="16dp" />

<!-- Mô tả -->
<TextView
    android:id="@+id/description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Review doesn't pertain to an experience at or with this business"
    android:textSize="16sp"
    android:textColor="#666666"
    android:layout_marginTop="8dp"
    android:gravity="center" />

<!-- Nút Submit -->
<Button
    android:id="@+id/submit_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:textColor="#FFFFFF"
    android:backgroundTint="#00bcd4"
    android:layout_marginTop="24dp"
    android:paddingHorizontal="32dp"
    android:paddingVertical="12dp" />

</LinearLayout>