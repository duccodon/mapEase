<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".WriteReview">

    <!-- Place Name and User Info -->
    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your place"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your name"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/place_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/posting_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posting publicly"
        android:textSize="15sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Star Rating -->
    <LinearLayout
        android:id="@+id/star_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/posting_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Star icons can be added here -->
        <ImageButton
            android:id="@+id/star1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_empty"
            android:background="@color/white"
            android:layout_marginEnd="34dp"
            />
        <ImageButton
            android:id="@+id/star2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_empty"
            android:background="@color/white"
            android:layout_marginEnd="34dp" />
        <ImageButton
            android:id="@+id/star3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_empty"
            android:background="@color/white"
            android:layout_marginEnd="34dp" />
        <ImageButton
            android:id="@+id/star4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_empty"
            android:background="@color/white"
            android:layout_marginEnd="34dp" />
        <ImageButton
            android:id="@+id/star5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/white"
            android:src="@drawable/ic_star_empty" />
    </LinearLayout>

    <!-- Review Text Area -->
    <EditText
        android:id="@+id/review_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tell others about your experience"
        android:layout_marginTop="16dp"
        android:textColor="#757575"
        android:background="#F5F5F5"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/star_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="top|start"
        android:textSize="20sp"/>

    <!-- Add Photos Button -->

    <Button
        android:id="@+id/add_photos_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Add photos and videos"
        android:textColor="#00bcd4"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/review_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#BAF2FA"/>

    <!-- Post Button -->
    <Button
        android:id="@+id/post_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00bcd4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_photos_button"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>